{
  "extends": ["next/core-web-vitals", "prettier"],
  "globals": {
    "React": true,
    "JSX": true
  },
  "env": {
    "node": true,
    "browser": true,
    "es2022": true
  },
  "ignorePatterns": [".*.js", "node_modules/", ".next/", "dist/", ".history/"],
  "rules": {
    "prefer-const": "error",
    "no-var": "error",
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "eqeqeq": ["error", "always"]
  }
}
